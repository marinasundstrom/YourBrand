@attribute [Route(PageRoutes.MyPages)]
@attribute [Authorize]
@using YourBrand.StoreFront
@inject IOrdersClient OrdersClient

<AppPageTitle>Orders</AppPageTitle>

<h1>Orders</h1>

@if (orders is null) 
{
    <em>Loading orders...</em>
}
else 
{
    <ul>
        @foreach(var order in orders.Items)
        {
            <li>@order.OrderNo</li>
        }
    </ul>
}

@code 
{
    PagedResultOfOrder? orders;

    protected override async Task OnInitializedAsync() 
    {
        try 
        {
            orders = await OrdersClient.GetOrdersAsync(1, 100, null, null);
        }
        catch(Exception exc) 
        {

        }
    }
}