@using System.Linq.Expressions
@inject IProductsClient ProductsClient
@inject IDialogService DialogService

<div class="d-flex flex-grow-1">
    <div class="flex-1 d-flex">
        <MudAutocomplete T="Product" Label="@Label" Dense="true" Variant="Variant" Style="@Style" Class="@Class" Value="Value" ValueChanged="ValueChanged"
            For="For" SearchFunc="SearchProducts" ToStringFunc="(x) => x.Name"
            ResetValueOnEmptyText="true" CoerceText="false" CoerceValue="false">
            <ItemTemplate Context="context2">
                <MudText Typo="Typo.body1">@context2.Name</MudText>
                @*<MudText Typo="Typo.body2">@context2.Ca</MudText> *@
            </ItemTemplate>

            <ItemSelectedTemplate Context="context2">
                <MudText Typo="Typo.body1">@context2.Name</MudText>
            </ItemSelectedTemplate>
        </MudAutocomplete>
    </div>
    
    @if(ShowAddButton) 
    {
        <MudIconButton Icon="@Icons.Material.Filled.Add" OnClick="AddProduct" />
    }
</div>

@code {
    [Parameter]
    public string Label { get; set; } = "Product";

    [Parameter]
    public Product Value { get; set; }

    [Parameter]
    public EventCallback<Product> ValueChanged { get; set; }

    [Parameter]
    public Expression<Func<Product>> For { get; set; }

    [Parameter]
    public string Style { get; set; }

    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public Variant Variant { get; set; }

    [Parameter]
    public string ProductGroupId { get; set; }

    [Parameter]
    public bool ShowAddButton { get; set; }

    [Parameter]
    public string StoreId { get; set; }

    [Parameter]
    public string BrandId { get; set; }


    [CascadingParameter(Name = "Organization")]
    public YourBrand.Portal.Services.Organization Organization { get; set; }

    async Task<IEnumerable<Product>> SearchProducts(string text, CancellationToken cancellationToken)
    {
        try
        {
            var result = await ProductsClient.GetProductsAsync(Organization.Id, StoreId, BrandId, true, true, text, null, 1,
        10, null, null, cancellationToken);

            return result.Items;
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }

        return null;
    }

    async Task AddProduct() 
    {
        try
        {
            var parameters = new DialogParameters();

            var type = System.Reflection.Assembly.Load("Showroom.UI")
                .GetType("YourBrand.Showroom.Products.ProductDialog");

            var dialogReference = DialogService.Show(type, "New Product", parameters, new DialogOptions {
                //FullScreen = true,
                MaxWidth = MaxWidth.ExtraLarge
            });

            var result = await dialogReference.Result;

            if(result.Canceled)
                return;

            Value = (Product)result.Data;

            await ValueChanged.InvokeAsync(Value);
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
    }
}