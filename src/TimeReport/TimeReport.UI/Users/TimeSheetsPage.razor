    MudTable<TimeSheet> table;
    string searchString;

    private TableGroupDefinition<TimeSheet> _groupDefinition = new()
    {
        GroupName = "Week",
        Indentation = false,
        Expandable = true,
        Selector = (e) => new { e.Year, e.Week }
    };

    [CascadingParameter]
    private Task<AuthenticationState> authenticationStateTask { get; set; }

    protected override async Task OnInitializedAsync()
    {

    }

    private async Task<TableData<TimeSheet>> ServerReload(TableState state)
    {
        var user = (await authenticationStateTask).User;
        var userId = user.FindFirst(x => x.Type.Contains("sub")).Value;

        var page = await TimeSheetsClient.GetTimeSheetsAsync(state.Page, state.PageSize, null, userId, searchString,
        state.SortLabel, state.SortDirection == MudBlazor.SortDirection.None ? null : state.SortDirection == MudBlazor.SortDirection.Descending ? TimeReport.Client.SortDirection.Desc : TimeReport.Client.SortDirection.Asc);

        return new TableData<TimeSheet>() { TotalItems = page.TotalItems, Items = page.Items };
    }

    async Task ToggleStatus(TimeSheet timeSheet)
    {
        if(timeSheet.Status == TimeSheetStatus.Closed)
        {
            await TimeSheetsClient.OpenWeekAsync(timeSheet.Id);

            timeSheet.Status = TimeSheetStatus.Open;
        }
        else
        {
            await TimeSheetsClient.CloseWeekAsync(timeSheet.Id);

            timeSheet.Status = TimeSheetStatus.Closed;
        }
    }

    private void OnSearch(string text)
    {
        searchString = text;
        table.ReloadServerData();
    }

    private void GotToTimeSheet(TimeSheet timeSheet)
    {
        NavigationManager.NavigateTo($"/timeSheet/{timeSheet.Year}/{timeSheet.Week}?userId={timeSheet.User.Id}");
    }

