    {
        if(customer is null)
            return;

        await InvoicesClient.SetCustomerAsync(organization.Id, invoice.Id, new SetCustomer {
            Id = customer.Id.ToString(),
            Name = customer.Name
        });

        this.customer = customer;
    }

