@page "/companies"
@attribute [Authorize]
@using YourBrand.Showroom.Persons.Profile
@inject ICompaniesClient CompaniesClient 
@inject IDialogService DialogService

<MudText Typo="Typo.h3" Class="mb-4">Companies</MudText>

<MudButton Variant="Variant.Filled" OnClick="async () => await OnCompanyClicked(null)" StartIcon="@Icons.Filled.Add" Color="Color.Default" Class="mb-2 me-2">
    New Company
</MudButton>

<MudPaper Class="pa-4" Elevation="25">
    <MudTable @ref="table" T="CompanyDto" Elevation="0" ServerData="LoadData" Dense="false" Hover="true" Bordered="false"
              Striped="true" OnRowClick="ItemOnClick">
        <ToolBarContent>
            
            <IndustrySelector Value="Industry" ValueChanged="OnIndustryChanged" For="() => Industry" />

            <MudSpacer />

            <MudTextField T="string" Dense="true" Value="searchString" ValueChanged="@(s=>OnSearch(s))" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Immediate="true" DebounceInterval="200"></MudTextField>
        </ToolBarContent>
        <HeaderContent>
            <MudTh><MudTableSortLabel T="CompanyDto" SortLabel="Name">Name</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel T="CompanyDto" SortLabel="Industry">Industry</MudTableSortLabel></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Name">@context.Name</MudTd>
            <MudTd DataLabel="Industry">@context.Industry.Name</MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudPaper>


@code {
    MudTable<CompanyDto> table; 
    string? searchString;

    public IndustryDto Industry { get; set; }

    private async Task<TableData<CompanyDto>> LoadData(TableState state)
    {
        try
        {
            var results = await CompaniesClient.GetCompaniesAsync(state.Page + 1, state.PageSize, Industry?.Id, searchString, state.SortDirection == MudBlazor.SortDirection.None ? null : state.SortLabel, state.SortDirection == MudBlazor.SortDirection.None ? null : (state.SortDirection == MudBlazor.SortDirection.Ascending ? YourBrand.Showroom.Client.SortDirection.Asc : YourBrand.Showroom.Client.SortDirection.Desc));
            return new TableData<CompanyDto> { Items = results.Items, TotalItems = results.TotalCount };
        }
        /*catch (ApiException exc)
        {
        }
        catch (HttpRequestException exc)
        {
        }*/
        catch (Exception exc)
        {
            //await JSHelpers.Alert(exc.Message);
        }

        return null!;
    }

    private async Task ItemOnClick(TableRowClickEventArgs<CompanyDto> ev)
    {
        var item = ev.Item;

        await OnCompanyClicked(item);
    }

    private void OnSearch(string text)
    {
        searchString = text;
        table.ReloadServerData();
    }

    private async Task OnIndustryChanged(IndustryDto sa)
    {
        Industry = sa;
        table.ReloadServerData();
    }

    async Task OnCompanyClicked(CompanyDto? dto)
    {
        try
        {
            var parameters = new DialogParameters();
            parameters.Add(nameof(CompanyDialog.CompanyId), dto?.Id);

            var dialogReference = DialogService.Show<CompanyDialog>(dto is null ? "New Company" : $"Update {dto.Name}", parameters, new DialogOptions {
                //FullScreen = true,
                MaxWidth = MaxWidth.ExtraLarge
            });
            var result = await dialogReference.Result;

            if(result.Cancelled)
                return;

            await table.ReloadServerData();
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
    }
}